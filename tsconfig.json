{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "ES2021.String"],
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude ": ["node_modules"]
}
